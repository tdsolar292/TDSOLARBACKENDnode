            color: #333;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .receipt-header {
            text-align: center;
            margin-bottom: 30px;
            border-bottom: 2px solid #2c3e50;
            padding-bottom: 20px;
        }
        .receipt-header h1 {
            color: #2c3e50;
            margin-bottom: 5px;
        }
        .receipt-header p {
            margin: 5px 0;
            color: #7f8c8d;
        }
        .receipt-details {
            width: 100%;
            border-collapse: collapse;
            margin: 25px 0;
        }
        .receipt-details th, .receipt-details td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        .receipt-details th {
            background-color: #f8f9fa;
            color: #2c3e50;
            width: 30%;
        }
        .amount-row {
            font-weight: bold;
            background-color: #f8f9fa;
            font-size: 16px;
        }
        .footer {
            margin-top: 30px;
            text-align: right;
            border-top: 1px dashed #7f8c8d;
            padding-top: 0px;
        }
        
